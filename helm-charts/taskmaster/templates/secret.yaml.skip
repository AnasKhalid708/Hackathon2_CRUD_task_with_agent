apiVersion: v1
kind: Secret
metadata:
  name: {{ .Values.secret.name }}
  labels:
    {{- include "taskmaster.labels" . | nindent 4 }}
type: Opaque
# NOTE: Secret data should be provided via kubectl create secret command
# This template shows the expected structure but does NOT contain actual values
# 
# To create the secret, run:
# kubectl create secret generic taskmaster-secret \
#   --from-literal=database-url="<your-database-url>" \
#   --from-literal=openai-api-key="<your-openai-key>" \
#   --from-literal=jwt-secret="<your-jwt-secret>" \
#   -n taskmaster
data: {}
  # database-url: <base64-encoded-value>
  # openai-api-key: <base64-encoded-value>
  # jwt-secret: <base64-encoded-value>
